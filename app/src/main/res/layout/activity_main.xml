<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- EditText for user to input speed -->
        <EditText
            android:id="@+id/speedInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:hint="@string/enter_your_speed_km_h"
            android:inputType="number"
            android:padding="8dp" />

        <!-- Button to check the speed -->
        <Button
            android:id="@+id/checkSpeedButton"
            android:layout_width="182dp"
            android:layout_height="77dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/enter_your_speed_km_h"
            android:text="@string/check_speed" />

        <!-- TextView to display the result -->
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>